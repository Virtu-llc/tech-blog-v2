---
// Background component with blur effects for dark theme
---

<div class="background-container">
	<div class="blur-circle blur-circle-1"></div>
	<div class="blur-circle blur-circle-2"></div>
</div>

<style>
	.background-container {
		pointer-events: none;
		position: fixed;
		left: 0;
		top: 0;
		z-index: -10;
		height: 100vh;
		width: 100%;
		overflow: hidden;
	}

	.blur-circle {
		position: absolute;
		border-radius: 50%;
		opacity: 0.2;
	}

	.blur-circle-1 {
		left: 20%;
		top: -20%;
		height: 800px;
		width: 800px;
		background: rgba(255, 255, 255, 0.05);
		filter: blur(150px);
		mix-blend-mode: soft-light;
	}

	.blur-circle-2 {
		bottom: -10%;
		right: -10%;
		height: 600px;
		width: 600px;
		background: rgba(128, 128, 128, 0.05);
		filter: blur(120px);
	}

	/* Reduce blur intensity on mobile for better performance */
	@media (max-width: 768px) {
		.blur-circle-1 {
			filter: blur(80px);
		}

		.blur-circle-2 {
			filter: blur(60px);
		}
	}

	/* Disable blur on very low-end devices */
	@media (max-width: 480px) and (prefers-reduced-motion: no-preference) {
		.blur-circle-1,
		.blur-circle-2 {
			filter: blur(40px);
		}
	}
</style>
